{
    "compilerOptions": {
        "module": "Node16",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "strictNullChecks": true
    },
    "include": [
        "src/**/*"
    ]
}